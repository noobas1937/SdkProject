<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mail_reward_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:id="@+id/cs_confirm_reward"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


        <View
            android:id="@+id/bg_mid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/reward_show_layout"
            android:layout_alignBottom="@+id/reward_show_layout"
            android:layout_marginTop="-20dp"
            android:background="#000000"
            android:alpha="0.7"/>
        <ImageView
            android:id="@+id/bg_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/bg_mid"
            android:src="@drawable/u_top"/>

        <ImageView
            android:id="@+id/bg_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bg_mid"
            android:src="@drawable/u_bottom"/>

        <LinearLayout
            android:id="@+id/reward_show_layout"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_centerInParent="true"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/reward_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:text="chooseServer"
                    android:textColor="@color/cs__white"
                    android:textSize="15sp"
                    />
                <ListView
                    android:id="@+id/reward_show_list"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/reward_title"
                    android:layout_marginBottom="20dp"
                    android:layout_height="match_parent">
                </ListView>
            </RelativeLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reward_top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-20dp"
            android:layout_above="@+id/reward_show_layout">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>

            <ImageView
                android:id="@+id/reward_top_bg"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:scaleType="fitXY"
                android:layout_height="wrap_content"
                android:minHeight="130dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/reward_top_bg"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>
        </LinearLayout>


        <ImageButton
            android:id="@+id/close_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/panel_close_btn"
            android:layout_alignTop="@+id/bg_mid"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"/>


</RelativeLayout>